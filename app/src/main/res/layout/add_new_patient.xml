<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:padding="5dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/patient_registration"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:textAlignment="center"
                android:background="#EF9636"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextPNIC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ded6ce"
                    android:textAlignment="center"
                    android:inputType="textCapCharacters"
                    android:padding="7dp"
                    android:hint="@string/nic_number"
                    tools:ignore="Autofill" />

                <requestFocus/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:padding="2dp"
                android:weightSum="1">

                <EditText
                    android:id="@+id/editTextPFirstName"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="0.5"
                    android:background="#ded6ce"
                    android:inputType="textCapWords"
                    android:hint="@string/first_name"
                    android:padding="7dp"
                    android:textAlignment="center"
                    tools:ignore="Autofill" />


                <EditText
                    android:id="@+id/editTextPLastName"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:background="#ded6ce"
                    android:inputType="textCapWords"
                    android:hint="@string/last_name"
                    android:padding="7dp"
                    android:textAlignment="center"
                    tools:ignore="Autofill" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp"
                android:padding="2dp"
                android:weightSum="1">

                <EditText
                    android:id="@+id/editTextPAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#ded6ce"
                    android:hint="@string/address"
                    android:inputType="textPostalAddress"
                    android:padding="7dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    tools:ignore="Autofill" />


            </LinearLayout>

            <EditText
                android:id="@+id/editTextEmergencyDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ded6ce"
                android:hint="Emergency Contacts"
                android:inputType="textMultiLine"
                android:padding="7dp"
                android:textAlignment="center"
                tools:ignore="Autofill,HardcodedText" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:padding="3dp"
                android:weightSum="1">

                <EditText
                    android:id="@+id/editTextPDOB"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:background="#ded6ce"
                    android:inputType="text"
                    android:layout_marginEnd="5dp"
                    android:textAlignment="center"
                    android:padding="7dp"
                    android:hint="@string/date_of_birth"
                    tools:ignore="Autofill" />


                <EditText
                    android:id="@+id/editTextPPhoneNumber"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:background="#ded6ce"
                    android:inputType="phone"
                    android:hint="@string/phone_number"
                    android:padding="7dp"
                    android:textAlignment="center"
                    tools:ignore="Autofill" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp"
                android:padding="2dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:layout_marginEnd="6dp"
                    android:background="#f0a85b"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:padding="7dp"
                    android:hint="@string/gender" />

                <Spinner
                    android:id="@+id/spinnerGender"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:background="#ded6ce"
                    android:entries="@array/gender"
                    android:padding="8dp"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextMedicalHistry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ded6ce"
                    android:textAlignment="center"
                    android:inputType="textMultiLine"
                    android:padding="7dp"
                    android:hint="Medical Details"
                    tools:ignore="Autofill,HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextAllergicHistry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ded6ce"
                    android:textAlignment="center"
                    android:inputType="textMultiLine"
                    android:padding="7dp"
                    android:hint="Allergic Details"
                    tools:ignore="Autofill,HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextSurgicalHistry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ded6ce"
                    android:textAlignment="center"
                    android:inputType="textMultiLine"
                    android:padding="7dp"
                    android:hint="Surgical Details"
                    tools:ignore="Autofill,HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextDrugHistry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ded6ce"
                    android:textAlignment="center"
                    android:inputType="textMultiLine"
                    android:padding="7dp"
                    android:hint="Drug Details"
                    tools:ignore="Autofill,HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextSocialHistry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ded6ce"
                    android:textAlignment="center"
                    android:inputType="textMultiLine"
                    android:padding="7dp"
                    android:hint="Social Details"
                    tools:ignore="Autofill,HardcodedText" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextExamDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ded6ce"
                    android:textAlignment="center"
                    android:inputType="textMultiLine"
                    android:padding="7dp"
                    android:hint="Examination Details"
                    tools:ignore="Autofill,HardcodedText" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp"
                android:padding="2dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:layout_marginEnd="6dp"
                    android:background="#f0a85b"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:padding="7dp"
                    android:hint="Current Location"
                    tools:ignore="HardcodedText" />

                <Spinner
                    android:id="@+id/spinnerCurrentLocation"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:background="#ded6ce"
                    android:entries="@array/location"
                    android:padding="8dp"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp"
                android:padding="2dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:layout_marginEnd="6dp"
                    android:background="#f0a85b"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:padding="7dp"
                    android:hint="@string/status" />

                <Spinner
                    android:id="@+id/spinnerStatus"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:background="#ded6ce"
                    android:entries="@array/status"
                    android:padding="8dp"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp"
                android:padding="2dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:layout_marginEnd="6dp"
                    android:background="#f0a85b"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:padding="7dp"
                    android:hint="Patient Type"
                    tools:ignore="HardcodedText" />

                <Spinner
                    android:id="@+id/spinnerPatientType"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:background="#ded6ce"
                    android:entries="@array/patient_type"
                    android:padding="8dp"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextVisitingNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ded6ce"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:padding="7dp"
                    android:hint="Visiting Number"
                    tools:ignore="Autofill,HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp"
                android:padding="2dp"
                android:weightSum="1">

                <EditText
                    android:id="@+id/editTextWeight"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    android:background="#ded6ce"
                    android:hint="Weight"
                    android:inputType="numberDecimal"
                    android:padding="7dp"
                    android:textAlignment="center"
                    tools:ignore="Autofill,HardcodedText" />


                <EditText
                    android:id="@+id/editTextHeight"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:background="#ded6ce"
                    android:hint="Height"
                    android:inputType="numberDecimal"
                    android:padding="7dp"
                    android:textAlignment="center"
                    tools:ignore="Autofill,HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp"
                android:padding="2dp"
                android:weightSum="1">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:onClick="cancelAddPatient"
                    android:layout_weight="0.5"
                    android:text="@string/cancel"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:onClick="addNewPatient"
                    android:text="@string/save"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>